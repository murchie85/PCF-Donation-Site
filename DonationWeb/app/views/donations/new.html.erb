<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">
        Donation Nation
      </a>
    </div>	
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><a href="/donations">Home <span class="sr-only">(current)</span></a></li>
        <li class="active"><a href="/donations/new">Make Donation</a></li>
      </ul>
  </div>
</nav>
<div class="row">
	<div class="col-md-2">&nbsp;</div>
	<div class="col-md-8">
		<%= form_for :donations, html: {role: "form", class:"form-horizontal"}, url: donations_path do |f| %>
  			<div class="form-group">
    				<%= f.label :id, class: "control-label col-sm-2" %>
				<div class="col-sm-10">
    					<%= f.text_field :donorid, class: "form-control" %>
				</div>
   			</div>
			<div class="form-group">
    				<%= f.label :name, class: "control-label col-sm-2" %>
				<div class="col-sm-10">
    					<%= f.text_field  :donorname, class: "form-control" %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label :amount, class: "control-label col-sm-2" %>
				<div class="col-sm-10">
    					<%= f.text_field  :donationamount, class: "form-control" %>
				</div>
			</div>
    		<%= f.submit 'Donate Now!', :class => "btn btn-primary btn-lg" %>

		<% end %>

	</div>
	<div class="col-md-2">&nbsp;</div>
</div>